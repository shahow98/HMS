<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hms?useUnicode=true&amp;characterEncoding=UTF-8</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<mapping resource="com/general/model/Address.hbm.xml" />

		<mapping resource="com/general/model/Collective.hbm.xml" />

		<mapping resource="com/general/model/Household.hbm.xml" />
		<mapping resource="com/general/model/Log.hbm.xml" />
		<mapping resource="com/general/model/Parent.hbm.xml" />

		<mapping resource="com/general/model/Resident.hbm.xml" />
		<mapping resource="com/general/model/SysSetting.hbm.xml" />

		<mapping resource="com/general/model/User.hbm.xml" />

	</session-factory>
</hibernate-configuration>
